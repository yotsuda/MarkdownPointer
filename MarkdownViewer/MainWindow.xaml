<Window x:Class="MarkdownViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="Markdown Viewer" Height="768" Width="1024"
        WindowStartupLocation="CenterScreen"
        Background="#FFFFFF"
        AllowDrop="True"
        PreviewDrop="Window_Drop"
        PreviewDragOver="Window_DragOver"
        KeyDown="Window_KeyDown" PreviewMouseWheel="Window_PreviewMouseWheel">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tab control -->
        <TabControl x:Name="FileTabControl" Grid.Row="0" 
                    SelectionChanged="TabControl_SelectionChanged"
                    Visibility="Collapsed">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal"
                                MouseLeftButtonDown="TabHeader_MouseLeftButtonDown"
                                MouseMove="TabHeader_MouseMove"
                                Tag="{Binding}">
                        <TextBlock Text="{Binding Title}" VerticalAlignment="Center"/>
                        <Button Content="✕" 
                                Click="CloseTab_Click"
                                Tag="{Binding}"
                                Width="16" Height="16" 
                                Margin="8,0,0,0"
                                FontSize="8"
                                Padding="0"
                                Background="Transparent"
                                BorderThickness="0"
                                VerticalAlignment="Center"/>
                    </StackPanel>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <ContentPresenter Content="{Binding WebView}"/>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>

        <!-- Scroll mode overlay -->
        <Border x:Name="DragOverlay" Grid.Row="0" 
                Background="#01000000" 
                Visibility="Collapsed"
                Margin="0,22,0,0"
                MouseLeftButtonDown="DragOverlay_MouseLeftButtonDown" MouseMove="DragOverlay_MouseMove" MouseLeftButtonUp="DragOverlay_MouseLeftButtonUp"
                PreviewMouseWheel="DragOverlay_PreviewMouseWheel"
                />

        <!-- Placeholder when no file is loaded -->
        <Border x:Name="PlaceholderPanel" Grid.Row="0" Background="#F6F8FA" Visibility="Visible">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="📝" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                <TextBlock Text="Markdown Viewer" FontSize="24" FontWeight="SemiBold" 
                           Foreground="#24292e" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                <TextBlock Text="Drag &amp; drop a file here" FontSize="14" 
                           Foreground="#586069" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                <TextBlock Text="or press Ctrl+O to open" FontSize="12" 
                           Foreground="#6a737d" HorizontalAlignment="Center"/>
                <TextBlock Text="F5 to reload" FontSize="12" 
                           Foreground="#6a737d" HorizontalAlignment="Center" Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <!-- Status bar -->
        <Border Grid.Row="1" Background="#F8F9FA" BorderBrush="#E1E4E8" BorderThickness="0,1,0,0">
            <Grid Height="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock x:Name="LinkStatusText" 
                           Grid.Column="0"
                           VerticalAlignment="Center" 
                           Margin="12,0" 
                           FontSize="11"
                           Foreground="#586069"
                           TextTrimming="CharacterEllipsis"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,12,0">
                    <TextBlock x:Name="StatusText" 
                               VerticalAlignment="Center" 
                               FontSize="11"
                               Foreground="#28A745"
                               Margin="0,0,12,0"/>
                    <TextBlock x:Name="WatchStatusText" 
                               VerticalAlignment="Center" 
                               FontSize="11"
                               Foreground="#586069"
                               Margin="0,0,12,0"/>
                    
                    <!-- Toggle buttons -->
                    <ToggleButton x:Name="TopmostToggle" FontFamily="Segoe UI Emoji" 
                                  Content="📌" 
                                  ToolTip="Always on top"
                                  Click="TopmostToggle_Click"
                                  Width="24" Height="20"
                                  FontSize="10"
                                  Margin="0,0,4,0"
                                  Background="Transparent"
                                  BorderThickness="1"/>
                    <ToggleButton x:Name="DragMoveToggle" FontFamily="Segoe UI Emoji" 
                                  Content="✋" 
                                  ToolTip="Scroll mode (Off: text selection)"
                                  Click="DragMoveToggle_Click"
                                  Width="24" Height="20"
                                  FontSize="10"
                                  Background="Transparent"
                                  BorderThickness="1"/>
                    <Button x:Name="OpenInCodeButton" 
                                  Content="Code" 
                                  ToolTip="Open in VS Code"
                                  Click="OpenInCodeButton_Click"
                                  Width="36" Height="20"
                                  FontSize="9"
                                  Margin="4,0,0,0"
                                  Background="Transparent"
                                  BorderThickness="1"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>